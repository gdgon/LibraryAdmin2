@model IEnumerable<LibraryAdmin2.Models.Book>

@{
    ViewBag.Title = "List";
}

<table class="table">
    <tr>
        @if (ViewBag.ListAction != null)
        {
            @:
            <th></th>
        }
        <th style="min-width:15em">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th style="min-width:15em">@Html.DisplayNameFor(model => model.Authors)</th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableCopies)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (ViewBag.ListAction != null)
            {
                <text>
                    <td>
                        @Html.ActionLink((string)ViewBag.ListLabel, (string)ViewBag.ListAction, new { id = item.Id }, new { @class = ViewBag.ListLabelClass })
                        <p style="display:none" class="id">@item.Id</p>
                        @*@Html.HiddenFor(modelItem => item.Id, new { @class = "Id"})*@
                    </td>
                </text>
            }
            <td>
                @Html.ActionLink(item.Title, "Details", "Book", new { id = item.Id }, null)
                @*@Html.DisplayFor(modelItem => item.Title)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableCopies)
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>*@
        </tr>
    }

</table>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/BookAuthor.js"></script>