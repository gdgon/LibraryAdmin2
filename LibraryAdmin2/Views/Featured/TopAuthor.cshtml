@model LibraryAdmin2.Models.Author

@if (Model != null)
{
    <div>
        <h4>Top Author</h4>
        <hr />
        <div>
            <img src="@Model.ImageUrl" class="picture" style="float:left; margin: 10px" />
            <p><strong>@Html.ActionLink(@Model.Name, "Details", "Author", new { id = Model.Id }, null)</strong></p>
            <p>
                Books
                @foreach (var book in Model.Books)
                {
                    @:&middot; @Html.ActionLink(book.Title, "Details", "Book", new { id = book.Id }, null)
            }
            </p>
            <p>@Model.ShortDescription</p>

            <em>@ViewBag.Num books borrowed</em>
        </div>
    </div>
}